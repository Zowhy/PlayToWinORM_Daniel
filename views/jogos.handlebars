<h1>Jogos Registrados</h1>

<a href="/jogos/novo">Cadastrar novo jogo</a>

<table border="1">
  <tr>
    <th>Id</th>
    <th>Título</th>
    <th>Preço</th>
    <th>Descrição</th>
  </tr>
  {{#each jogos}}
    <tr>
      <td>{{this.id}}</td>
      <td>{{this.titulo}}</td>
      <td>{{this.preco}}</td>
      <td>{{this.descricao}}</td>
      <td>
        <a href="/jogos/{{this.id}}/update">Update</a>
        <form action="/jogos/{{this.id}}/delete" method="post">
          <input type="submit" value="Excluir" />
        </form>
        <a href="/jogos/{{this.id}}/conquistas">View Achievements</a>
      </td>
    </tr>
  {{/each}}
</table>